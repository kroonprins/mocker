{
  "name": "root",
  "private": true,
  "scripts": {
    "start": "packages/mocker-ui/start.mjs",
    "install": "lerna exec npm install && lerna bootstrap",
    "postinstall": "node build-scripts/post-install.js",
    "test": "lerna run test && lerna run test-cjs",
    "lint-check": "eslint packages/*/*.mjs packages/*/src/*.mjs packages/*/test/*.mjs",
    "lint-fix": "eslint packages/*/*.mjs packages/*/src/*.mjs packages/*/test/*.mjs --fix",
    "ui": "packages/mocker-ui/start.mjs",
    "mock-server": "packages/mocker-mock-server/start.mjs",
    "learning-mode": "packages/mocker-learning-mode/start.mjs",
    "version-check": "updates && lerna run version-check",
    "docker-build-local-mock-server": "docker build -t mocker-local-mock-server -f Dockerfile.local.mock-server .",
    "docker-build-local-learning-mode": "docker build -t mocker-local-learning-mode -f Dockerfile.local.learning-mode .",
    "docker-build-local-ui": "docker build -t mocker-local-ui -f Dockerfile.local.ui .",
    "docker-build-local-shared-lib": "docker build -t mocker-local-shared-lib -f Dockerfile.local.shared-lib .",
    "docker-test-local-mock-server": "docker run --rm mocker-local-mock-server npm test",
    "docker-test-local-learning-mode": "docker run --rm mocker-local-learning-mode npm test",
    "docker-test-local-ui": "docker run --rm mocker-local-ui npm test",
    "docker-test-local-shared-lib": "docker run --rm mocker-local-shared-lib",
    "docker-build-local": "npm run docker-build-local-mock-server && npm run docker-build-local-learning-mode && npm run docker-build-local-ui && npm run docker-build-local-shared-lib",
    "docker-test-local": "npm run docker-test-local-mock-server && npm run docker-test-local-learning-mode && npm run docker-test-local-ui && npm run docker-test-local-shared-lib",
    "docker-local": "npm run docker-build-local && npm run docker-test-local",
    "docker-build": "lerna run docker-build",
    "docker-test": "lerna run docker-test",
    "docker-push": "lerna run docker-push",
    "publish-packages": "lerna publish"
  },
  "devDependencies": {
    "cross-var": "^1.1.0",
    "eslint": "^5.11.1",
    "eslint-config-standard": "^12.0.0",
    "eslint-plugin-import": "^2.14.0",
    "eslint-plugin-node": "^8.0.0",
    "eslint-plugin-promise": "^4.0.1",
    "eslint-plugin-standard": "^4.0.0",
    "lerna": "^3.8.0",
    "updates": "^6.0.3"
  },
  "dependencies": {}
}
